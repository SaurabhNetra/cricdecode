<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:paddingBottom="20dip" >

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_bottom_margin"
                android:layout_marginLeft="@dimen/card_left_margin"
                android:layout_marginRight="@dimen/card_right_margin"
                android:background="@drawable/cards_bg"
                android:paddingBottom="@dimen/card_bottom_padding"
                android:paddingLeft="@dimen/card_left_padding"
                android:paddingTop="@dimen/card_top_padding" >

                <TableRow
                    android:id="@+id/row1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lbl_matches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/matches"
                        android:textSize="@dimen/text_size_career_lbl"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/matches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_career_num" />
                </TableRow>

                <TableRow
                    android:id="@+id/row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lbl_wins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/wins"
                        android:textSize="@dimen/text_size_career_lbl"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/wins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_career_num" />
                </TableRow>

                <TableRow
                    android:id="@+id/row3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lbl_losses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/losses"
                        android:textSize="@dimen/text_size_career_lbl"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/losses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_career_num" />
                </TableRow>

                <TableRow
                    android:id="@+id/row4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lbl_ties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/ties"
                        android:textSize="@dimen/text_size_career_lbl"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_career_num" />
                </TableRow>

                <TableRow
                    android:id="@+id/row5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lbl_no_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/no_result"
                        android:textSize="@dimen/text_size_career_lbl"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/no_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_career_num" />
                </TableRow>

                <TableRow
                    android:id="@+id/row6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lbl_win_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/win_per"
                        android:textSize="@dimen/text_size_career_lbl"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/win_per"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_career_num" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/cir"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cir_general" />

</RelativeLayout>