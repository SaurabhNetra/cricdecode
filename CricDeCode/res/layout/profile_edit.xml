<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:fadingEdge="none"
    android:paddingBottom="20dip"
    android:paddingTop="20dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TableLayout
            android:id="@+id/tablelay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/cards_bg"
            android:paddingBottom="30dip"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingTop="35dip"
            android:shrinkColumns="1" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/name"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:padding="10dp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="8dp"
                android:background="@color/faint_grey" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:hint="@string/nickname"
                    android:inputType="text"
                    android:padding="10dp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="8dp"
                android:background="@color/faint_grey" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/date_of_birth" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:hint="@string/date_of_birth"
                    android:onClick="onClick"
                    android:padding="10dp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="8dp"
                android:background="@color/faint_grey" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/role" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/role"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:entries="@array/role" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="8dp"
                android:background="@color/faint_grey" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/batting_style" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/batting_style"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:entries="@array/batting_style" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="8dp"
                android:background="@color/faint_grey" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:text="@string/bowling_style" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/bowling_style"
                    android:layout_width="170dip"
                    android:layout_height="wrap_content"
                    android:entries="@array/bowling_style" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</ScrollView>