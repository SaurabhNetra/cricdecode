                android:ems="2"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line9"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lty_stumpings"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lty_byes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line9"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_byes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/byes" />

            <EditText
                android:id="@+id/byes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line10"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lty_byes"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lty_misfields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line10"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_misfields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/misfields" />

            <EditText
                android:id="@+id/misfields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line11"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lty_misfields"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lty_catches_dropped_fielding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line11"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_catches_dropped_fielding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/catches_dropped_fielding" />

            <EditText
                android:id="@+id/catches_dropped_fielding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>