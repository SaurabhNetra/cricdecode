<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lbl_innings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/innings"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/innings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lbl_innings"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_overs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/innings"
            android:padding="10dp"
            android:text="@string/overs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/overs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/innings"
            android:layout_toRightOf="@id/lbl_overs"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_spells"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overs"
            android:padding="10dp"
            android:text="@string/spells"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/spells"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overs"
            android:layout_toRightOf="@id/lbl_spells"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_runs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spells"
            android:padding="10dp"
            android:text="@string/runs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/runs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spells"
            android:layout_toRightOf="@id/lbl_runs"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_maidens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/runs"
            android:padding="10dp"
            android:text="@string/maidens"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/maidens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/runs"
            android:layout_toRightOf="@id/lbl_maidens"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_wickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maidens"
            android:padding="10dp"
            android:text="@string/wickets"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maidens"
            android:layout_toRightOf="@id/lbl_wickets"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_wickets_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wickets"
            android:padding="10dp"
            android:text="@string/wickets_left"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wickets_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wickets"
            android:layout_toRightOf="@id/lbl_wickets_left"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_wickets_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wickets_left"
            android:padding="10dp"
            android:text="@string/wickets_right"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wickets_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wickets_left"
            android:layout_toRightOf="@id/lbl_wickets_right"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_catches_dropped_bowling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wickets_right"
            android:padding="10dp"
            android:text="@string/catches_dropped_bowling"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/catches_dropped_bowling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wickets_right"
            android:layout_toRightOf="@id/lbl_catches_dropped_bowling"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_economy_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/catches_dropped_bowling"
            android:padding="10dp"
            android:text="@string/economy_rate"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/economy_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/catches_dropped_bowling"
            android:layout_toRightOf="@id/lbl_economy_rate"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_strike_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/economy_rate"
            android:padding="10dp"
            android:text="@string/strike_rate"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/strike_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/economy_rate"
            android:layout_toRightOf="@id/lbl_strike_rate"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/strike_rate"
            android:padding="10dp"
            android:text="@string/average"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/strike_rate"
            android:layout_toRightOf="@id/lbl_average"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_fwi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/average"
            android:padding="10dp"
            android:text="@string/fwi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fwi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/average"
            android:layout_toRightOf="@id/lbl_fwi"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_twm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fwi"
            android:padding="10dp"
            android:text="@string/twm"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/twm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fwi"
            android:layout_toRightOf="@id/lbl_twm"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_bbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/twm"
            android:padding="10dp"
            android:text="@string/bbi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/twm"
            android:layout_toRightOf="@id/lbl_bbi"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_bbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bbi"
            android:padding="10dp"
            android:text="@string/bbm"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bbm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bbi"
            android:layout_toRightOf="@id/lbl_bbm"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_fours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bbm"
            android:padding="10dp"
            android:text="@string/fours"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bbm"
            android:layout_toRightOf="@id/lbl_fours"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_sixes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fours"
            android:padding="10dp"
            android:text="@string/sixes"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sixes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fours"
            android:layout_toRightOf="@id/lbl_sixes"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_noballs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sixes"
            android:padding="10dp"
            android:text="@string/noballs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noballs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sixes"
            android:layout_toRightOf="@id/lbl_noballs"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lbl_wides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noballs"
            android:padding="10dp"
            android:text="@string/wides"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/noballs"
            android:layout_toRightOf="@id/lbl_wides"
            android:padding="10dp" />
    </RelativeLayout>

</ScrollView>