<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/performance_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/haze"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/gen_tab"
            android:layout_width="0dp"
            android:layout_height="@dimen/tab_height"
            android:layout_weight="0.25"
            android:background="@drawable/tab_selected_selector"
            android:clickable="true"
            android:onClick="onClick" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/general" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bat_tab"
            android:layout_width="0dp"
            android:layout_height="@dimen/tab_height"
            android:layout_weight="0.25"
            android:background="@drawable/tab_unselected_selector"
            android:clickable="true"
            android:onClick="onClick" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/batting" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bowl_tab"
            android:layout_width="0dp"
            android:layout_height="@dimen/tab_height"
            android:layout_weight="0.25"
            android:background="@drawable/tab_unselected_selector"
            android:clickable="true"
            android:onClick="onClick" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/bowling" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/field_tab"
            android:layout_width="0dp"
            android:layout_height="@dimen/tab_height"
            android:layout_weight="0.25"
            android:background="@drawable/tab_unselected_selector"
            android:clickable="true"
            android:onClick="onClick" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fielding" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>