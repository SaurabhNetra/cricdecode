                <TextView
                    android:id="@+id/lbl_fifties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/fifties"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fifties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/num_padding"
                    android:textSize="@dimen/text_size_career_num" />
            </TableRow>

            <TableRow
                android:id="@+id/row9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_hundreds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/hundreds"
                    android:textSize="@dimen/text_size_career_lbl"
