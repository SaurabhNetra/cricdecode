<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="none"
    android:paddingBottom="@dimen/scrollview_padding_bottom"
    android:paddingTop="@dimen/scrollview_padding_top" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/career_top_space_height"
            android:orientation="vertical" />

        <TableLayout
            android:id="@+id/tablelay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space"
            android:layout_marginBottom="@dimen/card_bottom_margin"
            android:layout_marginLeft="@dimen/card_left_margin"
            android:layout_marginRight="@dimen/card_right_margin"
            android:background="@drawable/cards_bg"
            android:paddingBottom="@dimen/card_bottom_padding"
            android:paddingLeft="@dimen/card_left_padding"
            android:paddingTop="@dimen/card_top_padding" >

            <TableRow
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_innings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/innings"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/innings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/num_padding"
                    android:textSize="@dimen/text_size_career_num" />
            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_not_outs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/not_outs"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/not_outs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/num_padding"
                    android:textSize="@dimen/text_size_career_num" />
            </TableRow>

            <TableRow
                android:id="@+id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/runs"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/num_padding"
                    android:textSize="@dimen/text_size_career_num" />
            </TableRow>

            <TableRow
                android:id="@+id/row4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_highest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/highest"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/highest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/num_padding"
                    android:textSize="@dimen/text_size_career_num" />
            </TableRow>

            <TableRow
                android:id="@+id/row5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/average"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
