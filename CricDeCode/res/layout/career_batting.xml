            </TableRow>

            <TableRow
                android:id="@+id/row12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_sixes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/sixes"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sixes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/num_padding"
                    android:textSize="@dimen/text_size_career_num" />
            </TableRow>

            <TableRow
                android:id="@+id/row13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_lives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lbl_padding"
                    android:text="@string/lives"
                    android:textSize="@dimen/text_size_career_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/num_padding"
                    android:textSize="@dimen/text_size_career_num" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/cir"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dip"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cir_batting" />
    </RelativeLayout>

</ScrollView>