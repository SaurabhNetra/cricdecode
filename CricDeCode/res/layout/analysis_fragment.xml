<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:fadingEdge="none"
    android:paddingBottom="@dimen/scrollview_padding_bottom"
    android:paddingTop="@dimen/scrollview_padding_top" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/page_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TableLayout
            android:id="@+id/tablelay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/page_desc"
            android:layout_marginBottom="@dimen/card_bottom_margin"
            android:layout_marginLeft="@dimen/card_left_margin"
            android:layout_marginRight="@dimen/card_right_margin"
            android:background="@drawable/cards_bg"
            android:paddingBottom="@dimen/card_bottom_padding"
            android:paddingLeft="@dimen/card_left_padding"
            android:paddingRight="@dimen/card_right_padding"
            android:paddingTop="@dimen/card_top_padding"
            android:shrinkColumns="1" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/graphtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_ten_dp"
                    android:layout_marginLeft="@dimen/margin_ten_dp"
                    android:text="@string/graph_typ" />

                <Spinner
                    android:id="@+id/graph_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ten_dp"
                    android:entries="@array/graph_type"
                    android:spinnerMode="dropdown" />
            </TableRow>

            <View
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="@dimen/view_separator_margin"
                android:background="@color/faint_grey" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/gamefacet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_ten_dp"
                    android:layout_marginLeft="@dimen/margin_ten_dp"
                    android:text="@string/game_facet" />

                <Spinner
                    android:id="@+id/graph_facet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ten_dp"
                    android:entries="@array/graph_facet" />
            </TableRow>

            <View
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="@dimen/view_separator_margin"
                android:background="@color/faint_grey" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_set_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_ten_dp"
                    android:layout_marginLeft="@dimen/margin_ten_dp"
                    android:text="@string/set_filter" />

                <Button
                    android:id="@+id/filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ten_dp"
                    android:onClick="onClick"
                    android:text="@string/filter" />
            </TableRow>

            <View
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="@dimen/view_separator_margin"
                android:background="@color/faint_grey" />

            <TableRow
                android:id="@+id/xy_r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:id="@+id/txt_select_data1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ten_dp"
                    android:layout_marginTop="@dimen/margin_ten_dp"
                    android:text="@string/select_data" />

                <RelativeLayout
                    android:id="@+id/rl_td"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/line_graph_params"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical" >

                        <Spinner
                            android:id="@+id/graph_param1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_ten_dp" />

                        <TextView
                            android:id="@+id/vs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_ten_dp"
                            android:text="@string/vs" />

                        <Spinner
                            android:id="@+id/graph_param2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_ten_dp" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/graph_param_pie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/margin_ten_dp"
                        android:visibility="invisible" />
                </RelativeLayout>
            </TableRow>

            <View
                android:layout_height="@dimen/separator_height_one_dp"
                android:layout_margin="@dimen/view_separator_margin"
                android:background="@color/faint_grey" />

            <TableRow
                android:id="@+id/xy_r4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <Button
                    android:id="@+id/generate_graph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/generate_graph_margin_top"
                    android:layout_span="2"
                    android:onClick="onClick"
                    android:padding="@dimen/generate_graph_padding"
                    android:text="@string/generate_graph"
                    android:textSize="@dimen/text_size_twenty_sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</ScrollView>