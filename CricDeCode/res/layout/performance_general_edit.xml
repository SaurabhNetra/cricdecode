<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/match_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/match_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/vs" />

            <TextView
                android:id="@+id/opponent_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/match_info"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lyt_overs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/overs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip" />

            <TextView
                android:id="@+id/overs_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/overs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lyt_overs"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lyt_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip" />

            <TextView
                android:id="@+id/lbl_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/level" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lyt_level"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lyt_venue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lyt_venue"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lyt_dur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/duration" />

            <Spinner
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/match_duration" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lyt_dur"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lyt_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_first_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/first" />

            <Spinner
                android:id="@+id/first_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/first" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lyt_first"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lyt_match_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line6"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_match_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/match_result" />

            <Spinner
                android:id="@+id/match_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/match_result" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/lyt_match_result"
            android:layout_margin="10dip"
            android:background="#282828"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/lyt_match_review"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_match_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/match_review" />

            <EditText
                android:id="@+id/match_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="5"
                android:padding="10dp"
                android:scrollHorizontally="false" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>