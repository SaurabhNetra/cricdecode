    <item
        android:bottom="@dimen/shadow_padding_bottom"
        android:left="@dimen/shadow_padding_left"
        android:right="@dimen/shadow_padding_right"
        android:top="@dimen/shadow_padding_top">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/card_radius" />

            <solid android:color="@color/light_grey" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/darkline_padding_bottom"
        android:left="@dimen/darkline_padding_left"
        android:right="@dimen/darkline_padding_right"
        android:top="@dimen/darkline_padding_top">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/card_radius" />

            <solid android:color="@color/trans_dark_grey" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/white_padding_bottom"
        android:left="@dimen/white_padding_left"
        android:right="@dimen/white_padding_right"
        android:top="@dimen/white_padding_top">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/card_radius" />

            <solid android:color="@color/white" />
        </shape>
    </item>

